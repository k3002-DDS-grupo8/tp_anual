  /* Estilos para los botones de la alerta */
  .alert-button {
      padding: 10px 20px;
      margin: 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
  }

  /* Colores espec칤ficos para cada bot칩n */
